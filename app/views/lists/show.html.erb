<h1><%= @list.name %></h1>

<% @list.bookmarks.each_with_index do |bookmark, index| %>
<h3><%= index + 1 %> <%= bookmark.movie.title %></h3>
<ul>
  <li>description: <%= bookmark.movie.overview %></li>
  <li>rating: <%= bookmark.movie.rating %></li>
  <%= link_to "Remove",
                  bookmark_path(bookmark),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
</ul>
<% end %>



<%= link_to "Home", lists_path %>
<%= link_to "Add a movie", new_list_bookmark_path(@list) %>
